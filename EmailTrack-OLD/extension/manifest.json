{
    "manifest_version": 3,
    "name": "EmailTrack",
    "version": "1.0.0",
    "description": "Track email opens for Gmail",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://emailtrack.isnode.pp.ua/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "https://mail.google.com/*"
            ]
        }
    ]
}