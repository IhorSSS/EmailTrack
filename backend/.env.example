# Database Connection
# If using Docker, this is constructed automatically from DB_PASSWORD.
# For local dev, uncomment and use full URL:
# DATABASE_URL="postgresql://emailtrack:password@localhost:5432/emailtrack?schema=public"

# Database Password (used by Docker Compose)
DB_PASSWORD=your_secure_password_here_min_16_chars

# JWT Secret (for session signing)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Chrome Extension ID (for CORS and Auth Origin Check)
# Find this in chrome://extensions after loading your extension
EXTENSION_ID=your_chrome_extension_id_here

# Server Port
PORT=3000

# Encryption Key (Must be 32 characters for AES-256)
# Generate one with: openssl rand -hex 16
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars
